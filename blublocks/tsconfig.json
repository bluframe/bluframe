{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "lib/types",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "lib",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "next-env.d.ts",
    "src",
    ".storybook"
  ],
  "exclude": [
    "node_modules"
  ]
}
